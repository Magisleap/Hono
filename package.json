{
  "name": "stripe_api_server",
  "version": "0.0.1",
  "description": "StripeのAPIをコールしてプロダクト商品などを取得するAPIです",
  "author": "tkgling",
  "private": true,
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "scripts": {
    "dev": "wrangler dev src/index.ts --test-scheduled",
    "start:prod": "bun dist/index.js",
    "prebuild": "rimraf dist",
    "build": "bun build src/index.ts --minify --outdir dist --outfile=index.js",
    "lint": "bunx @biomejs/biome lint --apply src",
    "format": "bunx @biomejs/biome format --write src",
    "prepare": "husky",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "hono": "^4.6.2",
    "lint-staged": "^15.2.10",
    "lodash": "^4.17.21",
    "stripe": "^16.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@cloudflare/workers-types": "^4.20240919.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@hono/zod-openapi": "^0.16.0",
    "@scalar/hono-api-reference": "^0.5.147",
    "@types/bun": "^1.1.10",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.5.5",
    "commitizen": "^4.3.0",
    "husky": "^9.1.6",
    "wrangler": "3.17.0"
  }
}
